{
    # Global options - works for both VPS and local environments
    # CADDY_AUTO_HTTPS: "on" for VPS (Let's Encrypt), "off" for local (HTTP only)
    auto_https {$CADDY_AUTO_HTTPS:on}
    email {$LETSENCRYPT_EMAIL}
}

